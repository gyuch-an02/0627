<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First gradient layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF0090D6"
                android:endColor="#FFEE378F"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="12dp" /> <!-- Apply rounded corners -->
            <size
                android:width="60dp"
                android:height="70dp" /> <!-- Set width and height -->
        </shape>
    </item>
    <!-- Second gradient layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFCBE5BD"
                android:endColor="#00CBE5BD"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="12dp" /> <!-- Apply rounded corners -->
            <size
                android:width="60dp"
                android:height="70dp" /> <!-- Set width and height -->
        </shape>
    </item>
</layer-list>
